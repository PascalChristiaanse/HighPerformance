{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mpicc: build active file",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "module load 2024r1 openmpi && mpicc -O2 -o ${fileDirname}/${fileBasenameNoExtension} ${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile the currently active file using mpicc, loading the required module."
        },
        {
            "label": "mpicxx: build MM-product with Eigen",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "module load 2024r1 openmpi && mpicxx -O2 -I${workspaceFolder}/assignment_1/MM_product/eigen-5.0.1 -o ${workspaceFolder}/assignment_1/MM_product/MM-product ${workspaceFolder}/assignment_1/MM_product/MM-product.cpp"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile MM-product.cpp with Eigen headers and MPI support."
        },
        {
            "label": "cmake: configure Poisson",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "module load 2024r1 openmpi cmake && cd ${workspaceFolder} && cmake --preset default"
            ],
            "problemMatcher": [],
            "detail": "Configure CMake for Poisson solver project."
        },
        {
            "label": "cmake: build Poisson",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "module load 2024r1 openmpi cmake && cd ${workspaceFolder} && cmake --build build"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build SEQ_Poisson and PAR_Poisson using CMake.",
            "dependsOn": "cmake: configure Poisson"
        }
    ]
}