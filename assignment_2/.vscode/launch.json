{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Submit SBATCH",
            "type": "node-terminal",
            "request": "launch",
            "command": "cmake --build --preset debug-mpicxx-ninja && sbatch ${workspaceFolder}/run.sbatch",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run PAR_Poisson (ASCII output)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-mpicxx-ninja/PAR_Poisson",
            "args": [
                "-o",
                "output",
                "input.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Run PAR_Poisson (HDF5 output)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-mpicxx-ninja/PAR_Poisson",
            "args": [
                "--hdf5",
                "-o",
                "solution",
                "input.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Run PAR_Poisson (Record Iterations)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-mpicxx-ninja/PAR_Poisson",
            "args": [
                "--record-iterations",
                "--save-interval",
                "100",
                "-o",
                "iterations",
                "input.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Debug PAR_Poisson with MPI (1 process)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/mpirun",
            "args": [
                "-np",
                "1",
                "${workspaceFolder}/build/debug-mpicxx-ninja/PAR_Poisson",
                "input.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Debug PAR_Poisson: 4 processes, HDF5, record every 100 iterations",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/mpirun",
            "args": [
                "-np",
                "4",
                "--use-hwthread-cpus",
                "${workspaceFolder}/build/debug-mpicxx-ninja/PAR_Poisson",
                // "--hdf5",
                "input.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        }
    ]
}